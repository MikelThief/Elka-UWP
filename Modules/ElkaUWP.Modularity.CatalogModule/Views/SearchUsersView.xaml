<Page
    x:Class="ElkaUWP.Modularity.CatalogModule.Views.SearchUsersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ElkaUWP.Modularity.CatalogModule.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///ElkaUWP.Infrastructure/ResourceDictionaries/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource RegionBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <AutoSuggestBox
            Grid.Row="0"
            Width="270"
            Margin="0,32,0,0"
            HorizontalAlignment="Center"
            PlaceholderText="Jan Kowalski">
            <AutoSuggestBox.QueryIcon>
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE721;" />
            </AutoSuggestBox.QueryIcon>
        </AutoSuggestBox>
    </Grid>
</Page>
